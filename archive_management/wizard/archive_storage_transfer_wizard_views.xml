<odoo>


    <record model="ir.ui.view" id="archive_storage_transfer_wizard_form">
        <field name="name">archive.storage.transfer.wizard.form</field>
        <field name="model">archive.storage.transfer.wizard</field>
        <field name="priority" eval="16"/>
        <field name="arch" type="xml">
            <form string="Move">
                <header/>
                <sheet>
                    <field name="transfer_type" invisible="1"/>
                    <field name="storage_id" invisible="1"/>
                    <field name="repository_id" invisible="1"/>
                    <field name="min_level" invisible="1"/>
                    <field name="max_level" invisible="1"/>
                    <group>
                        <field name="dest_storage_id" attrs="{'invisible': [('transfer_type', '!=', 'storage')], 'required': [('transfer_type', '=', 'storage')]}" options="{'no_create': True}"/>
                        <field name="dest_partner_id" attrs="{'invisible': [('transfer_type', '!=', 'partner')], 'required': [('transfer_type', '=', 'partner')]}"/>
                        <field name="dest_location_id" attrs="{'invisible': [('transfer_type', '!=', 'location'), 'required': [('transfer_type', '=', 'location')]]}" options="{'no_create': True}"/>
                    </group>
                </sheet>
                <footer>
                    <button string="Transfer" name="run"
                            type="object" default_focus="1" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="archive_storage_transfer_wizard_action">
        <field name="name">Files</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">archive.storage.transfer.wizard</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
